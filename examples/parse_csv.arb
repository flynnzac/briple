' parses a comma-separated file into a registry

source "examples/tokenize.arb" .

/parse-csv
  (
    open-text-file name .
    /file ans .
    /parsed [ list ] .
    /cur-reg /#1 . 

    while ( set /cur-line [ read-line file ] .
	          is-string cur-line . )
          (
            tokenize /line cur-line /sep "," .
            in parsed ( set cur-reg ans ) .
            set /cur-reg [ next cur-reg ] .
          ) .

    
    close /file .
    answer parsed .
  ) .
