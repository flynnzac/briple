' Line-oriented text editor
/arbed [ object . ] .
in arbed
   (
     /buffer [ list . ] . 
     /cur-line /t1 . 
     /n ( up set /cur-line [ next cur-line . ] . ) .
     /p ( up set /cur-line [ previous cur-line . ] . ) .
     /i
       [ op (
         /arbed-str s buffer .
         in buffer
            (
              set cur-line arbed-str .
            ) .
       )
       /s ] . 
     /o
       (
         print [ get cur-line buffer . ] .
       ) .
   ) .


