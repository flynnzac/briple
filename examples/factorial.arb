' compute a factorial using while
set /factorial
    < (
      set /i 2 .
      set /prod 1 .
      while ( lt-eq i t )
            (
              set /prod [ mul i prod ] .
              incr i .
            ) .
      answer prod .
    ) /t > .    


' compute factorial using recursion

set /-factorial-recurse
    (
      if [ eq t 1 ]
         1
         {
           mul t [ -factorial-recurse /t [ sub t 1 ] ] .
         } .
    ) .

set /factorial-recurse < -factorial-recurse /t > .


